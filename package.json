{
  "name": "llm-jira",
  "version": "1.0.0",
  "description": "로컬 환경에서 실행되는 LLM 기반 프로젝트 관리 도구",
  "main": "dist/index.js",
  "bin": {
    "llm-jira": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc && npm run build:web --if-present",
    "build:web": "test -d web && cd web && npm run build || echo 'Web directory not found, skipping web build'",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:web": "cd web && npm run dev",
    "start": "node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio"
  },
  "keywords": [
    "jira",
    "llm",
    "project-management",
    "task-management",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@prisma/client": "^5.7.1",
    "@types/socket.io": "^3.0.1",
    "axios": "^1.6.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "multer": "^1.4.5-lts.1",
    "openai": "^6.8.1",
    "simple-git": "^3.20.0",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^30.0.0",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "concurrently": "^8.2.2",
    "jest": "^30.2.0",
    "prisma": "^5.7.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
